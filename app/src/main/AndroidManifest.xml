<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wentongwang.mysports">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activity.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activity.signup.SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".views.activity.createvent.CreatEventActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".views.activity.home.HomeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
    </application>

</manifest>
