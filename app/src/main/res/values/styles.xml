<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#424458</item>
        <item name="colorPrimaryDark">#424458</item>
        <item name="colorAccent">#B6B6B6</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edittext_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:background">@drawable/login_ll_background</item>
        <item name="android:divider">@drawable/login_divider_line</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="login_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/login_et_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="creat_event_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/login_et_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="login_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="creat_event_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bottom_tab_bg_selector</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>


    <declare-styleable name="ToolBarLayout">
        <attr name="tbTitle" format="reference|string" />
        <attr name="tbTitleVisiable" format="boolean" />
        <attr name="tbInfoLeft" format="reference|string" />
        <attr name="tbInfoRight" format="reference|string" />
        <attr name="tbInfoLeftVisiable" format="boolean" />
        <attr name="tbInfoRightVisiable" format="boolean" />
        <attr name="tbImgLeftVisiable" format="boolean" />
        <attr name="tbImgRightVisiable" format="boolean" />
        <attr name="tbImgLeft" format="reference" />
        <attr name="tbImgRight" format="reference" />
        <attr name="tbBackground" format="reference|color" />
        <attr name="tbBackgroundHeight" format="dimension" />
        <attr name="tbTitleTextColor" format="color" />
        <attr name="tbTitleTextSize" format="dimension" />
        <attr name="tbImgCenter" format="reference" />
        <attr name="tbImgCenterVisiable" format="boolean" />
    </declare-styleable>


    <!-- 分享对话框样式 -->
    <style name="ShareDialog" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <declare-styleable name="MyProgressBarHorizontal">
        <attr name="reachColor" format="reference|color" />
        <attr name="unReachColor" format="reference|color" />
        <attr name="reachHeight" format="dimension" />
        <attr name="unReachHeight" format="dimension" />
        <attr name="gradient" format="boolean" />
        <attr name="gradientStartColor" format="reference|color" />
        <!--<attr name="gradientMiddleColor" format="reference|color" />-->
        <attr name="gradientEndColor" format="reference|color" />

    </declare-styleable>

    <declare-styleable name="TabLayoutStyle">
        <attr name="lineColor" format="reference|color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="useTriangle" format="boolean" />
        <attr name="triangleColor" format="reference|color" />
        <attr name="textColorNormal" format="reference|color" />
        <attr name="textSize" format="dimension" />
        <attr name="textColorLight" format="reference|color" />


    </declare-styleable>
</resources>
